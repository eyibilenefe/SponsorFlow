NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Empty, all, or * means any email can register.
ALLOWED_USER_EMAILS=member1@university.edu,member2@university.edu,member3@university.edu

APP_BASE_URL=https://your-domain.com
CRON_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# Outbound SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=user@example.com
SMTP_PASS=REPLACE_ME
SMTP_FROM_EMAIL=club@example.com
# Optional
SMTP_FROM_NAME=University Club
SMTP_REPLY_TO=club@example.com
SMTP_LIST_UNSUBSCRIBE_EMAIL=unsubscribe@example.com
SMTP_LIST_UNSUBSCRIBE_URL=https://your-domain.com/unsubscribe
SMTP_DKIM_DOMAIN_NAME=example.com
SMTP_DKIM_KEY_SELECTOR=default
# For Vercel, keep newlines escaped: -----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
SMTP_DKIM_PRIVATE_KEY=

# Inbound IMAP
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_TLS=true
IMAP_USER=user@example.com
IMAP_PASS=REPLACE_ME
# Optional
IMAP_TLS_REJECT_UNAUTHORIZED=true
IMAP_MAILBOX=INBOX
IMAP_LOOKBACK_HOURS=168
